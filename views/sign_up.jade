extends layout 

block content
    a(href="/") Click here to return home.
    h1 Fill out and submit the form below to create an account:

    form(method='POST' action='')

        div.form-group
            label(for="username") Username: 
                input#username(type="text", name = "username", value = persistant_username ? persistant_username : '')

        div.form-group
            label(for="password") Password:
                input#password(type="text", name = "password" value = persistant_password ? persistant_password : '') 

        button(type="submit") Create Account

    //- If errors, display below.
    if errors
        ul 
            for error in errors 
                li=error.msg